{
    "displayName": "Microsoft Teams Policy Baseline",
    "description": "Monitor Microsoft Teams meeting and messaging policies",
    "resources": [
        {
            "resourceType": "teamsMeetingPolicy",
            "displayName": "Global Meeting Policy",
            "resourceInstanceIdentifier": {
                "identity": "Global"
            },
            "properties": {
                "AllowTranscription": true,
                "AllowCloudRecording": true,
                "AllowAnonymousUsersToJoinMeeting": false,
                "AllowExternalParticipantGiveRequestControl": false
            }
        },
        {
            "resourceType": "teamsMessagingPolicy",
            "displayName": "Global Messaging Policy",
            "resourceInstanceIdentifier": {
                "identity": "Global"
            },
            "properties": {
                "AllowUrlPreviews": true,
                "AllowGiphy": true,
                "GiphyRatingType": "Moderate"
            }
        }
    ],
    "parameters": []
}
